<section id="index">
  {{#if i18n.isSet}}
    <section class="card browse">
      <h1>{{t "browse_header"}}</h1>
      <h2>{{t "browse_subtitle"}}</h2>
      <a href="http://google.com" class="start">{{t "browse_start"}}</a>
    </section>

    <section class="card map animated fadeInUp">
      <h1> {{t "map_header"}} </h1>
      {{k-map datapoints=model.mapdata filter=model.filter}}
    </section>

    {{k-news articles=model.news}}
  {{else}}
    {{k-language-picker}}
  {{/if}}
</section>